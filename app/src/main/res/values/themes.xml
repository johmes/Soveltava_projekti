<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Malko" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">#C5AFF6</item>
        <item name="colorError">#FFCF6679</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimarySurface">#FFFFFF</item>
        <item name="itemTextColor">#020202</item>
        <item name="colorOnBackground">#FF020202</item>
        <item name="colorOnSurface">#FF020202</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:windowBackground">#FFF7F7F7</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/holo_blue_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="generalnotitle" parent="Theme.Malko">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
